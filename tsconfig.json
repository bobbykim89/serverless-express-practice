{
  "compilerOptions": {
    "lib": ["ES2017"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "removeComments": true,
    "strict": true,

    "target": "ES2017",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["./dist/**/*", "./node_modules/**/*"]
}
